  {{>steps}}

  <!-- Main Form -->
  <form class="main" id="main">
    <div class="fieldset">
      <div class="title">
        <h4>Estudiante</h4>
      </div>
      <div class="data">
        <datalist id="sex">
          <option value="Masculino" label="Sexo">
          <option value="Femenino" label="Sexo">
        </datalist>
        <datalist id="yesno">
          <option value="Si" label="¿Si/No?">
          <option value="No" label="¿Si/No?">
        </datalist>
        <datalist id="civil">
          <option value="Casado/a" label="¿Si/No?">
          <option value="Soltero/a" label="¿Si/No?">
          <option value="Viudo/a" label="¿Si/No?">
        </datalist>

        <!-- Student's Data -->
        <label for="name">Nombres Y Apellidos</label>
        <label for="identification">Cédula</label>
        <input type="text" name="name" disabled>
        <input type="number" name="identification" min="0" disabled>
        <label for="sex">Sexo</label>
        <label for="birthday">Fecha de Nacimiento</label>
        <input type="text" name="sex" list="sex" disabled>
        <input type="date" name="birthday" disabled>

        <label for="birthdayPlace">Lugar de Nacimiento</label>
        <label for="municipality">Municipio</label>
        <input type="text" name="birthdayPlace" disabled>
        <input type="text" name="municipality" disabled>
        <label for="country">Entidad Federal / País</label>
        <label for="age">Edad</label>
        <input type="text" name="country" disabled>
        <input type="number" name="age" min="0" max="120" step="1" disabled>

        <label for="weight">Peso</label>
        <label for="height">Estatura</label>
        <input type="number" name="weight" min="0" max="120" step="1" disabled>
        <input type="number" name="height" min="0" max="300" step="1" disabled>
        <label for="shirtSize">Talla de Camisa</label>
        <label for="pantSize">Talla de Pantalón</label>
        <input type="number" name="shirtSize" list="size" min="0" max="40" step="1" disabled>
        <input type="number" name="pantSize" list="size" min="0" max="40" step="1" disabled>

        <label for="shoeSize">Talla de Zapato</label>
        <label for="liveWithParents">¿Vive con sus padres?</label>
        <input type="number" name="shoeSize" list="size" min="0" max="40" step="1" disabled>
        <input type="text" name="liveWithParents" list="yesno" disabled>
        <label for="direction">Dirección</label>
        <label for="phoneNumber">Teléfono</label>
        <input type="text" name="direction" disabled>
        <input type="number" name="phoneNumber" disabled>

        <label for="impedimentToSports">Impedimento A Deportes</label>
        <label for="alergicTo">Alérgico A</label>
        <input type="text" name="impedimentToSports" disabled>
        <input type="text" name="alergicTo" disabled>

        <button type="button" class="next btn">Siguiente</button>
      </div>
    </div>
    <div class="fieldset">
      <div class="title">
        <h4>Padre</h4>
      </div>
      <div class="data">
        <!-- Parent's Data -->
        <label for="parentName">Nombres Y Apellidos</label>
        <label for="parentSex">Sexo</label>
        <input type="text" name="parentName" disabled>
        <input type="text" name="parentSex" list="sex" disabled>
        <label for="parentIdentification">Cédula</label>
        <label for="parentBirthday">Fecha de Nacimiento</label>
        <input type="number" name="parentIdentification" min="0" disabled>
        <input type="date" name="parentBirthday" disabled>

        <label for="parentCompany">Empresa dónde labora</label>
        <label for="parentCivilState">Estado Civil</label>
        <input type="text" name="parentCompany" disabled>
        <input type="text" name="parentCivilState" list="civil" disabled>
        <label for="parentOcupation">Ocupación</label>
        <label for="parentDirection">Dirección de Habitación</label>
        <input type="text" name="parentOcupation" disabled>
        <input type="text" name="parentDirection" disabled>

        <label for="parentPhoneNumber1">Teléfono 1</label>
        <label for="parentPhoneNumber2">Teléfono 2</label>
        <input type="number" name="parentPhoneNumber1" disabled>
        <input type="number" name="parentPhoneNumber2" disabled>
        <label for="liveWithKid">¿Vive con el niño?</label>
        <label for=""></label>
        <input type="text" name="liveWithKid" list="yesno" disabled>
        <label for=""></label>

        <button type="button" class="prev btn">Anterior</button>
        <button type="button" class="next btn">Siguiente</button>
      </div>
    </div>
    <div class="fieldset">
      <div class="title">
        <h4>Representante</h4>
      </div>
      <div class="data">
        <!-- Representative's Data -->
        <label for="representName">Nombres Y Apellidos</label>
        <label for="representSex">Sexo</label>
        <input type="text" name="representName" disabled>
        <input type="text" name="representSex" list="sex" disabled>
        <label for="representID">Cédula</label>
        <label for="representBirthday">Fecha de Nacimiento</label>
        <input type="number" name="representID" disabled>
        <input type="date" name="representBirthday" disabled>

        <label for="representAge">Edad</label>
        <label for="representCivilState">Estado Civil</label>
        <input type="number" name="representAge" min="0" max="120" step="1" disabled>
        <input type="text" name="representCivilState" list="civil" disabled>
        <label for="representOcupation">Ocupación</label>
        <label for="representCompany">Empresa dónde labora</label>
        <input type="text" name="representOcupation" disabled>
        <input type="text" name="representCompany" disabled>

        <label for="representDirection">Dirección de Habitación</label>
        <label for="representPhoneNumber1">Teléfono 1</label>
        <input type="text" name="representDirection" disabled>
        <input type="number" name="representPhoneNumber1" disabled>
        <label for="representPhoneNumber2">Teléfono 2</label>
        <label for=""></label>
        <input type="number" name="representPhoneNumber2" disabled>
        <label for=""></label>

